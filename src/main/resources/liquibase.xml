<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="init" author="philimonovaleksandr">
        <createTable tableName="person">
            <column name="id" type="serial" autoIncrement="true">
                <constraints unique="true" nullable="false" primaryKey="true"/>
            </column>
            <column name="email" type="varchar(255)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="password" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="account">
            <column name="id" type="serial" autoIncrement="true">
                <constraints unique="true" nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="amount" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="person_id" type="int">
                <constraints nullable="false" foreignKeyName="fk_person_id" references="person(id)"/>
            </column>
        </createTable>

        <createTable tableName="transaction">
            <column name="id" type="serial" autoIncrement="true">
                <constraints unique="true" nullable="false" primaryKey="true"/>
            </column>
            <column name="amount" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="execution_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="from_account_id" type="int">
                <constraints nullable="true" foreignKeyName="fk_from_account_id" references="account(id)"/>
            </column>
            <column name="to_account_id" type="int">
                <constraints nullable="true" foreignKeyName="fk_to_account_id" references="account(id)"/>
            </column>
        </createTable>

        <createTable tableName="category">
            <column name="id" type="serial" autoIncrement="true">
                <constraints unique="true" nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="person_id" type="int">
                <constraints nullable="true" foreignKeyName="fk_person_id_category" references="person(id)"/>
            </column>
        </createTable>

        <createTable tableName="transaction_to_category">
            <column name="transaction_id" type="int">
                <constraints nullable="false" foreignKeyName="fk_transaction_id" references="transaction(id)"/>
            </column>
            <column name="category_id" type="int">
                <constraints nullable="false" foreignKeyName="fk_category_id" references="category(id)"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>